abstract class Habitacion {
    # cantMaxPersonas: int
    # tipo: TipoHabitacion
    # estado: EstadoHabitacion
    # regimen: RegimenAlimenticio
    # precio: float

    + getPrecio(): float
    + setRegimen(regimen: RegimenAlimenticio): void
