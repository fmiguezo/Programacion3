interface EstadoHabitacion {
    + seleccionar() : void
    + cambiarEstado(): void
}

class Disponible implements EstadoHabitacion {
    - estado: EstadoHabitacion
    + seleccionar() : void
    + cambiarEstado(): void
}

note bottom of Disponible
